{
    "defaultSeverity": "error",
    /*"extends": [
        "tslint:recommended"
    ],*/
    "jsRules": {},
    "rules": {
        "indent": false,
        // "no-string-literal": true, // we use query['foo'] in some cases to make clear that it is an any...
        "no-inferrable-types": true,
        "no-internal-module": true,
        "quotemark": [true, "double", "jsx-double", "avoid-escape"],
        "no-unused-variable": true,
        "prefer-object-spread": true,
//        "ordered-imports": true
        "no-unnecessary-type-assertion": true,
        "curly": true,
        "no-debugger": true,
        "no-duplicate-super": true,
        "no-duplicate-switch-case": true,
        "no-duplicate-variable": true,
        "no-dynamic-delete": true,
//        "no-empty": true, // there are lots of functions with empty bodys
        "no-floating-promises": true,
        "no-for-in-array": true,
//        "no-implicit-dependencies": true, // complains about 'meteor/*' dependencies
        "no-inferred-empty-object-type": true,
        "no-invalid-template-strings": true,
        //        "no-invalid-this": true, // meteor uses `this` in methods and publications etc
        "no-misused-new": true,
        "no-object-literal-type-assertion": true,
        "no-return-await": true,
        "no-shadowed-variable": [

            true,
            {
                "class": true,
                "enum": true,
                "function": true,
                "interface": false,
                "namespace": true,
                "typeAlias": false,
                "typeParameter": false
            }
        ],
        "no-sparse-arrays": true,
        "no-string-literal": true,
        "no-string-throw": true,
//        "no-unbound-method": [true, "ignore-static"], // not sure about this one...
        "no-use-before-declare": true,
        "no-var-keyword": true,
        "no-void-expression": [true, "ignore-arrow-function-shorthand"],
        "no-this-assignment": [true, {"allowed-names": ["^self([A-Z][a-z]+)*$"], "allow-destructuring": true}],
        "semicolon": [true, "always", "ignore-bound-class-methods"],
        "triple-equals": [true, "allow-null-check", "allow-undefined-check"],
        "use-default-type-parameter": true,
        "use-isnan": true,
        "prefer-readonly": true,
        "cyclomatic-complexity": [true, 8],
        "prefer-const": [true, {"destructuring": "all"}],
        "arrow-return-shorthand": [true, "multiline"],
        "eofline": true,
        "no-trailing-whitespace": [true, "ignore-comments", "ignore-blank-lines"]
    },
    "rulesDirectory": []
}